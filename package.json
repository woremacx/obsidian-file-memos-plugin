{
	"name": "obsidian-file-memos",
	"version": "0.1.0",
	"description": "Display #memos tagged files as Thino-style card view with timestamps and checkboxes.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"test": "jest",
		"test:watch": "jest --watch",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"memos",
		"card-view",
		"thino"
	],
	"author": "k",
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^30.0.0",
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"jest": "^30.2.0",
		"obsidian": "latest",
		"ts-jest": "^29.4.5",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	}
}
